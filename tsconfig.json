{
  "compilerOptions": {
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2020",
    "baseUrl": ".",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*"],
  "exclude": ["/node_modules", "dist"],
  "ts-node": {
    "compilerOptions": {
      "rootDir": null
    }
  }
}
