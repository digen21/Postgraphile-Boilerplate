{
  "name": "Postgraphile-BoilerPlate",
  "version": "1.0.0",
  "description": "Postgraphile Backend BoilerPlate",
  "main": "index.ts",
  "author": "DMX214",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.3",
    "dotenv-expand": "^11.0.6",
    "express": "^4.18.2",
    "graphile-worker": "^0.16.6",
    "inquirer": "^9.2.22",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "os": "^0.1.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.5",
    "postgraphile": "^4.13.0",
    "postgraphile-plugin-connection-filter": "^2.3.0",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/lodash": "^4.17.4",
    "@types/nodemon": "^1.19.2",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.8",
    "@types/pg": "^8.11.6",
    "@types/typescript": "^2.0.0",
    "cross-env": "^7.0.3",
    "graphile-migrate": "^1.4.1",
    "ts-node": "^10.9.1"
  },
  "scripts": {
    "db": "cross-env NODE_OPTIONS=\"$NODE_OPTIONS -r dotenv-expand/config\" graphile-migrate",
    "migrate": "yarn db migrate",
    "watch": "yarn db watch",
    "commit": "yarn db commit",
    "uncommit": "yarn db uncommit",
    "worker:install": "yarn worker --schema-only",
    "worker": "cd dist/worker && graphile-worker --crontab ../../crontab",
    "reset": "yarn db reset",
    "build": "tsc -p tsconfig.build.json",
    "dev": "nodemon -r dotenv-expand/config src/index.ts",
    "start:worker": "cross-env NODE_OPTIONS=\"$NODE_OPTIONS -r dotenv-expand/config\" yarn worker",
    "start:prod": "node ./dist/index.js",
    "setup:db": "node -r dotenv-expand/config ./src/script/setup_db.js && yarn db reset --erase && yarn db reset --erase --shadow"
  }
}
